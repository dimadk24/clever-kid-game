{
  "name": "clever-kid-game",
  "version": "1.0.0",
  "description": "Rolling Scopes School game task",
  "main": "src/index.jsx",
  "scripts": {
    "start": "webpack-dev-server --open --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js ",
    "lint": "eslint ./src/**/*.js?",
    "prebuild": "yarn lint",
    "deploy": "gh-pages -d dist",
    "predeploy": "yarn build",
    "test": "jest",
    "preanalyze": "npx webpack --profile --json --config webpack.prod.js > bundle_stats.json",
    "analyze": "webpack-bundle-analyzer bundle_stats.json ./dist/"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(scss|css|png|jpg|gif|svg|eot|woff|woff2|ttf)$": "<rootDir>/__mocks__/mock.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/TestSetup.js"
  },
